<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?attr/ripple">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius" />
                    <solid android:color="?attr/buttonControl" />
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius" />
                    <solid android:color="?attr/buttonDisabled" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>